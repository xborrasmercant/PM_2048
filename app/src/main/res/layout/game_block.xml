<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/GG_backgroundView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/GB_scoreNumberTV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        android:autoSizeMaxTextSize="300sp"
        android:autoSizeMinTextSize="35sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/baloo_bhai_2_bold"
        android:gravity="center"
        android:shadowColor="@color/dark_brown"
        android:shadowDx="6"
        android:shadowDy="6"
        android:shadowRadius="5"
        android:textAlignment="center"
        android:textColor="@color/light_beige"
        app:layout_constraintBottom_toBottomOf="@+id/GG_backgroundView"
        app:layout_constraintLeft_toLeftOf="@id/GG_backgroundView"
        app:layout_constraintRight_toRightOf="@id/GG_backgroundView"
        app:layout_constraintTop_toTopOf="@+id/GG_backgroundView"
        tools:text="@string/blockPoints" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="GB_scoreNumberTV" />

</androidx.constraintlayout.widget.ConstraintLayout>