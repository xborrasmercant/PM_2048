<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".oldGameBlock">


        <GridLayout
            android:id="@+id/gameGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="4"
            android:background="@color/brown"
            android:padding="6dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Game Blocks -->
            <!-- Row 1 -->
            <include
                android:id="@+id/gameBlock1"
                layout="@layout/game_block"
                android:layout_width="@dimen/blockSize"
                android:layout_height="@dimen/blockSize"
                android:layout_row="0"
                android:layout_column="0" />

            <include
                android:id="@+id/gameBlock2"
                layout="@layout/game_block"
                android:layout_width="@dimen/blockSize"
                android:layout_height="@dimen/blockSize"
                android:layout_row="0"
                android:layout_column="1" />

            <include
                android:id="@+id/gameBlock3"
                layout="@layout/game_block"
                android:layout_width="@dimen/blockSize"
                android:layout_height="@dimen/blockSize"
                android:layout_row="0"
                android:layout_column="2" />

            <include
                android:id="@+id/gameBlock4"
                layout="@layout/game_block"
                android:layout_width="@dimen/blockSize"
                android:layout_height="@dimen/blockSize"
                android:layout_row="0"
                android:layout_column="3" />

            <!-- Row 2 -->
            <include
                android:id="@+id/gameBlock5"
                layout="@layout/game_block"
                android:layout_width="@dimen/blockSize"
                android:layout_height="@dimen/blockSize"
                android:layout_row="1"
                android:layout_column="0" />

            <include
                android:id="@+id/gameBlock6"
                layout="@layout/game_block"
                android:layout_width="@dimen/blockSize"
                android:layout_height="@dimen/blockSize"
                android:layout_row="1"
                android:layout_column="1" />

            <include
                android:id="@+id/gameBlock7"
                layout="@layout/game_block"
                android:layout_width="@dimen/blockSize"
                android:layout_height="@dimen/blockSize"
                android:layout_row="1"
                android:layout_column="2" />

            <include
                android:id="@+id/gameBlock8"
                layout="@layout/game_block"
                android:layout_width="@dimen/blockSize"
                android:layout_height="@dimen/blockSize"
                android:layout_row="1"
                android:layout_column="3" />

            <!-- Row 3 -->
            <include
                android:id="@+id/gameBlock9"
                layout="@layout/game_block"
                android:layout_width="@dimen/blockSize"
                android:layout_height="@dimen/blockSize"
                android:layout_row="2"
                android:layout_column="0" />

            <include
                android:id="@+id/gameBlock10"
                layout="@layout/game_block"
                android:layout_width="@dimen/blockSize"
                android:layout_height="@dimen/blockSize"
                android:layout_row="2"
                android:layout_column="1" />

            <include
                android:id="@+id/gameBlock11"
                layout="@layout/game_block"
                android:layout_width="@dimen/blockSize"
                android:layout_height="@dimen/blockSize"
                android:layout_row="2"
                android:layout_column="2" />

            <include
                android:id="@+id/gameBlock12"
                layout="@layout/game_block"
                android:layout_width="@dimen/blockSize"
                android:layout_height="@dimen/blockSize"
                android:layout_row="2"
                android:layout_column="3" />

            <!-- Row 4 -->
            <include
                android:id="@+id/gameBlock13"
                layout="@layout/game_block"
                android:layout_width="@dimen/blockSize"
                android:layout_height="@dimen/blockSize"
                android:layout_row="3"
                android:layout_column="0" />

            <include
                android:id="@+id/gameBlock14"
                layout="@layout/game_block"
                android:layout_width="@dimen/blockSize"
                android:layout_height="@dimen/blockSize"
                android:layout_row="3"
                android:layout_column="1" />

            <include
                android:id="@+id/gameBlock15"
                layout="@layout/game_block"
                android:layout_width="@dimen/blockSize"
                android:layout_height="@dimen/blockSize"
                android:layout_row="3"
                android:layout_column="2" />

            <include
                android:id="@+id/gameBlock16"
                layout="@layout/game_block"
                android:layout_width="@dimen/blockSize"
                android:layout_height="@dimen/blockSize"
                android:layout_row="3"
                android:layout_column="3" />

        </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
